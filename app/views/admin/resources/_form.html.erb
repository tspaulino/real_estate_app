<%= form_for @item, :url => options, :html => { :class => "resource", :multipart => true } do |form| %>

  <% if @item.errors.any? %>
  <div id="errorExplanation">
    <h3><%= Typus::I18n.t("%{errors} prohibited this page from being saved:", :errors => pluralize(@item.errors.count, "error")) %></h3>
    <ul>
    <% @item.errors.full_messages.each do |full_message| %>
      <li><%= full_message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <fieldset class="inputs">
    <ol>
      <%= raw build_form(@fields, form) %>
    </ol>
  </fieldset>

  <fieldset class="buttons">
    <ol>
      <li><%= submit_tag button, :class => "commit", :onclick => "setConfirmUnload(false);" %></li>
    </ol>
  </fieldset>

<% end %>
